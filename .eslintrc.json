{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "useJSXTextNode": true,
    "project": "./tsconfig.json"
  },
  "env": {"node": true},
  "plugins": ["@typescript-eslint"],
  "extends": ["plugin:@typescript-eslint/recommended"],
  "rules": {
    "@typescript-eslint/indent": ["error", 2],
    "no-unused-vars": "off"
  }
}
